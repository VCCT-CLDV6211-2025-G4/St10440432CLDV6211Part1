@model Event

@{
    ViewData["Title"] = "Delete Event";
}

<h1>Delete Event</h1>
<hr />

<div class="row">
    <div class="col-md-6">
        <form asp-action="Delete">
            <!-- inline validation summary -->
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <dl class="row">
                <dt class="col-sm-3">Name</dt>
                <dd class="col-sm-9">@Model.EventName</dd>

                <dt class="col-sm-3">Date</dt>
                <dd class="col-sm-9">@Model.Date.ToShortDateString()</dd>

                <dt class="col-sm-3">Time</dt>
                <dd class="col-sm-9">@Model.Time.ToShortTimeString()</dd>

                <dt class="col-sm-3">Venue</dt>
                <dd class="col-sm-9">@Model.Venue?.VenueName</dd>
            </dl>

            <input type="hidden" asp-for="EventId" />

            <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>
